<!DOCTYPE html>
@model IEnumerable<EntitiyLayer.Concrete.Comment>

 
    @{

    ViewBag.Title = "AdminCommentList";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    }



    <html>

    <body class="hold-transition sidebar-mini">

        <!-- Main content -->

        <section class="content">

            <div class="container-fluid">

                <div class="row">

                    <div class="card-body">

                        <!-- Post -->
                        @foreach (var x in Model)
                        {
                        <div class="post">

                            <div class="user-block">

                                <img class="img-circle img-bordered-sm" src="/adminLTE-3.0.4/dist/img/user1-128x128.jpg" alt="user image">

                                <span class="username">

                                    <a href="#">@x.UserName-@x.Blogs.BlogTitle</a>

                                    <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>

                                    <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>

                                </span>

                                <span class="description">@(((DateTime)@x.Tarih).ToString("dd-MMM-yyyy"))</span>
                               
                            </div>

                            <p>

                                @x.CommentText
                                
                            </p>

                            <p>
                                
                                <a href="/Comment/CommentStatusChangeToFalse/@x.CommentID" class="link-black text-sm mr-2"><i class="fas fa-dailymotion mr-1"></i> Yorumu Kaldır</a>
                            </p>

                        </div>
                        }
                    </div>

                </div>

            </div>



        </section>

    </body>

</html>
