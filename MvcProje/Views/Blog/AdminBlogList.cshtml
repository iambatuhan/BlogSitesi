@model IEnumerable<EntitiyLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AdminBlogList</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Baslık</th>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yorumlar</th>
    </tr>
    @foreach(var x in Model)
            {
<tr>
    <td>@x.BlogID</td>
    <td>@x.BlogTitle</td>
    <td>@x.Category.CategoryID</td>
    <td>@x.BlogDate.ToShortDateString()</td>
    <td><a href="/Blog/DeleteBlog/@x.BlogID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Blog/UpdateBlog/@x.BlogID " class="btn btn-success">Güncelle</a></td>
    <td><a href="/Blog/BlogDetails/@x.BlogID" class="btn btn-secondary">Detaylar</a></td>
    <td><a href="/Blog/GetCommentByBlog/@x.BlogID" class="btn btn-dark">Yorumlar</a></td>



</tr>
            }
</table>
<a href="/Blog/AddNewBlog/" class="btn btn-info">Yeni Blog Ekle</a>